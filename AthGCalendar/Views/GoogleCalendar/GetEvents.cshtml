@model IEnumerable<Google.Apis.Calendar.v3.Data.Event>

@{
    ViewBag.Title = "Current events List";
}

<h2>Current events List</h2>

<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Start
        </th>
        <th>
            Ends
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End)
            </td>

        </tr>
    }

</table>

<div>
    <button type="button" class="btn btn-primary">@Html.ActionLink("Add new event", "AddEvent")</button>
</div>
